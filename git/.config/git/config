[core]
	editor = $EDITOR
	pager = bat --style=grid 
	autocrlf = input
	compression = 9
	preloadindex = true

[format]
	pretty = %C(magenta)%h %C(auto)%ar %C(auto)%D%n%C(auto)%s%n

[pretty]
	oneline = %C(red)%h%n%n%n%n

