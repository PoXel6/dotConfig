[core]
	editor = $EDITOR
	pager = delta
	autocrlf = input
	compression = 9
	preloadindex = true

[format]
	pretty = %C(red)%h %C(auto)%ar %C(magenta)%an %C(auto)%D%n    %C(white)%s%n    %C(auto)%b%n

[pretty]
	one = %C(red)%h  %C(magenta)%an  %C(auto)%s     %C(auto)%d

[alias]
	log = log --all --graph --decorate --pretty=one

[user]
	name = pox
	email = iampoxel6@gmail.com

[init]
	defaultBranch = main

[advice]
	addEmptyPathspec = false
	pushNonFastForward = false
	statusHints = false

[status]
	short = true
	branch = true
	showStash = true
	showUntrackedFiles = normal

[diff]
	renames = copies

[difftool]
	tool = nvimdiff
	guitool = nvimdiff

[interactive]
	diffFilter = delta --color-only --show-syntax-themes
	singleKey = true

[delta]
	hyperlinks = true
	side-by-side = true
	navigate = true
	dark = true

[url "git@github.com:PoXel6/"]
	insteadOf = "pox:"

[url "git@github.com:"]
	insteadOf = "gh:"

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[pull]
	default = current
	rebase = true

[merge]
	tool = nvimdiff1
	guitool = nvimdiff1
	conflictStyle = zdiff3

[rebase]
	autoStash = true
	missingCommitCheck = true

[log]
	abbrevCommit = true
	graphColors = blue,yellow,cyan,magenta,green,red

[color]
	ui = auto

[color "decorate"]
	HEAD = red
	branch = yellow
	tag = red
	remoteBranch = blue

[branch]
	sort = -committerdate

[tag]
	sort = -taggerdate

[rerere]
	enabled = true
