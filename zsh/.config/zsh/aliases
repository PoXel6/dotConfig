alias srczsh='source $HOME/.zshrc'
alias srcbash='source $XDG_CONFIG_HOME/bash/bashrc'
alias tss='tmux-sessionizer'

alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'
alias ff='fastfetch'
alias fff='fastfetch --config examples/10.jsonc  --logo ~/.config/fastfetch/arch-uwux.png --logo-preserve-aspect-ratio --logo-type kitty-icat --logo-width 40'

# Vim aliases
alias vi='nvim'
alias vim='nvim'

alias ls='eza -GAstype -F --hyperlink --icons=always'
alias ll='eza -hAlstype -F --hyperlink --icons=always'
alias lt='eza --tree -Astype -F --hyperlink --icons=always'

# Git aliases
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -t ~/dotconfig/git/.config/git/template'
alias gC='git clone'
alias gd='git diff'
alias gf='git fetch'
alias gl="git log --all --graph --pretty=format:'%C(magenta)%h %C(white)%an@%C(auto)%ar %C(auto)%D%n%s%n%n'"
alias gm='git merge'
alias gp='git pull'
alias gr='git restore'
alias gR='git reset'
alias gs='git status -s'
alias gu='git push'
alias gw='git switch'
alias gco='git checkout'
alias gpu='git pull && git push'
alias gsync='git add -A && git commit -m "automatic commit" && git pull && git push'
