#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(find ~/CodeezNutz/*/ ~/CodeezNutz/java/Minecraft/ ~/dotconfig/ -mindepth 1 -maxdepth 1 -type d,l |
		fzf --color="bw" --no-scrollbar)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s "$selected_name" -c "$selected" "nvim"\; \
		new-window -c "$selected" \; \
		select-window -t 1
	exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected "nvim"\; \
		new-window -c "$selected" \; \
		select-window -t 1

fi

if [[ -z $TMUX ]]; then
	tmux attach -t $selected_name
else
	tmux switch-client -t $selected_name
fi
