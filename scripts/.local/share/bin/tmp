#!/usr/bin/env bash

TMP_LOCATION="$HOME/Personal/TMP/"
TMP_FOLDER="$TMP_LOCATION/$(date '+%Y_%m_%d')"
input="USER INPUT"

TMP_NAME="test-"
if [[ $# != 1 ]]; then
	read -p "[PROMPT]: Enter a name: " input
	TMP_NAME+="$input"
else
	TMP_NAME+="$1"
fi

TARGET="$TMP_FOLDER/$TMP_NAME"

if [[ ! -d "$TARGET" ]]; then
	mkdir -p "$TARGET"
fi

~/.local/share/bin/tmux-sessionizer "$TARGET"
